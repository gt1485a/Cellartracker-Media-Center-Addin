<Mcml xmlns="http://schemas.microsoft.com/2006/mcml">

  <!-- This sample demonstrates how to use a MergeAnimation to combine      -->
  <!-- multiple source animations into one.                                 -->
  <UI Name="MergeAnimation">

    <Properties>

      <!-- A looping animation that modifies position. -->
      <Animation Name="PositionAnimation" Loop="-1">
        <Keyframes>

          <PositionKeyframe Time="0.0" Value="0,0,0" Interpolation="SCurve"/>
          <PositionKeyframe Time="2.0" Value="100,0,0" Interpolation="SCurve"/>
          <PositionKeyframe Time="4.0" Value="0,0,0" Interpolation="SCurve"/>

        </Keyframes>
      </Animation>

      <!-- A looping animation that modifies scale. -->
      <Animation Name="ScaleAnimation" Loop="-1" 
                 CenterPointPercent="0.5, 0.5, 0.0">
        <Keyframes>

          <ScaleKeyframe Time="0.0" Value="1.0,1.0,1.0" Interpolation="SCurve"/>
          <ScaleKeyframe Time="2.0" Value="0.5,0.5,0.5" Interpolation="SCurve"/>
          <ScaleKeyframe Time="4.0" Value="1.0,1.0,1.0" Interpolation="SCurve"/>

        </Keyframes>
      </Animation>

    </Properties>

    <Content>

      <Panel Layout="VerticalFlow">
        <Layout>
          <FlowLayout Orientation="Vertical" Spacing="10,0"/>
        </Layout>
        <Children>

          <!-- Demonstrate what the unmodified Position animation looks     -->
          <!-- like.                                                        -->

          <Text Color="White" Font="Arial, 20"
                Content="Position animation"/>

          <Graphic Content="res://McmlSampler,Version=6.0.6000.0,Culture=neutral,PublicKeyToken=31bf3856ad364e35!Peanut.Cartoon.1.png">
            <Animations>

              <Animation Animation="[PositionAnimation]"/>

            </Animations>
          </Graphic>


          <!-- Demonstrate what the unmodified Scale animation looks like.  -->

          <Text Color="White" Font="Arial, 20"
                Content="Scale animation"/>

          <Graphic Content="res://McmlSampler,Version=6.0.6000.0,Culture=neutral,PublicKeyToken=31bf3856ad364e35!Peanut.Cartoon.1.png">
            <Animations>

              <Animation Animation="[ScaleAnimation]"/>

            </Animations>
          </Graphic>


          <!-- Use a MergeAnimation to take the Position and Scale          -->
          <!-- animations and create a single animation from them.          -->

          <Text Color="White" Font="Arial, 20"
                Content="Merged animation"/>

          <Graphic Content="res://McmlSampler,Version=6.0.6000.0,Culture=neutral,PublicKeyToken=31bf3856ad364e35!Peanut.Cartoon.1.png">
            <Animations>

              <MergeAnimation>
                <Sources>

                  <Animation Animation="[PositionAnimation]"/>
                  <Animation Animation="[ScaleAnimation]"/>

                </Sources>
              </MergeAnimation>

            </Animations>
          </Graphic>

        </Children>
      </Panel>

    </Content>

  </UI>

</Mcml>
